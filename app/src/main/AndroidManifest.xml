<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.almurray.android.almurrayportal">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".firstPages.zeroPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".firstPages.firstSteps" />
        <activity android:name=".firstPages.loginPage" />
        <activity
            android:name=".main.mainSwiper"
            android:label="@string/title_activity_main_swiper"
            android:theme="@style/AppTheme" />
        <activity android:name=".firstPages.signupPage" />
        <activity android:name=".firstPages.queue" />
        <activity android:name=".utils.webView"></activity>
    </application>

</manifest>